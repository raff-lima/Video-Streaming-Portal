# =================================
# VARIÁVEIS DE AMBIENTE - COOLIFY
# =================================
# Cole estas variáveis no Coolify UI
# Seção: Environment Variables
# =================================

# Application
APP_NAME=VideoStreamingPortal
APP_ENV=production
APP_DEBUG=false
APP_URL=https://videoportal.seudominio.com

# Timezone e Idioma
APP_TIMEZONE=America/Sao_Paulo
APP_LANG=pt

# Database (use o hostname interno do Coolify)
# Exemplo: se seu DB no Coolify se chama "videoportal-db"
# O hostname será: videoportal-db.coolify.local
DB_CONNECTION=mysql
DB_HOST=videoportal-db.coolify.local
DB_PORT=3306
DB_DATABASE=videoportal
DB_USERNAME=videoadmin
DB_PASSWORD=SUA_SENHA_SEGURA_AQUI

# Cache & Session
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# Redis (opcional - se usar)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Gmail exemplo)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app-gmail
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=seu-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Broadcast
BROADCAST_DRIVER=log

# AWS S3 (se usar para storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (se usar)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

